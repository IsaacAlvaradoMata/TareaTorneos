<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="root" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cr.ac.una.tareatorneos.controller.BracketGeneratorController">

    <!-- Label normal indicando el partido actual -->
    <Label fx:id="lblPartidoActual"
           layoutX="20"
           layoutY="20"
           text="Partido pendiente: -"/>

    <!-- Botón MFX para jugar el partido -->
    <MFXButton fx:id="btnPlay"
               layoutX="20"
               layoutY="50"
               text="Jugar partido"
               onAction="#onActionBtnPlay"
               prefWidth="150"/>

    <!-- Zona visual para los brackets -->
    <Pane layoutX="0" layoutY="100" prefWidth="1200" prefHeight="800">
        <ScrollPane fitToHeight="true" fitToWidth="true"
                    AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <AnchorPane fx:id="bracketContainer"
                        minWidth="1600"
                        minHeight="1000">
                <!-- Aquí se insertan los nodos y líneas dinámicamente -->
            </AnchorPane>
        </ScrollPane>
    </Pane>
</AnchorPane>
