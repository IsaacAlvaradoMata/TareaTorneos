                              <HBox alignment="CENTER" prefWidth="607.0" spacing="100">
                                  <children>
                                      <VBox alignment="CENTER" spacing="5">
                                          <children>
                                              <StackPane fx:id="spImagenEquipoA" styleClass="spImagenEquipoA" VBox.vgrow="ALWAYS">
                                                  <children>
                                                      <ImageView fx:id="imgEquipoA" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" />
                                                  </children>
                                              </StackPane>
                                              <Label fx:id="lblEquipoA" styleClass="lbl-SubTitulosMatchView" text="Equipo A" />
                                              <Label fx:id="lblPuntajeA" styleClass="lbl-SubTitulosMatchView" text="Puntaje: 0" />
                                          </children>
                                      </VBox>
      
                                      <VBox alignment="CENTER" spacing="5">
                                          <children>
                                              <StackPane fx:id="spImagenEquipoB" styleClass="spImagenEquipoB" VBox.vgrow="ALWAYS">
