                                                      <ImageView fx:id="imgEquipoB" fitHeight="120" fitWidth="120" pickOnBounds="true" preserveRatio="true" />
                                                  </children>
                                              </StackPane>
                                              <Label fx:id="lblEquipoB" styleClass="lbl-SubTitulosMatchView" text="Equipo B" />
                                              <Label fx:id="lblPuntajeB" styleClass="lbl-SubTitulosMatchView" text="Puntaje: 0" />
                                          </children>
                                      </VBox>
                                  </children>
                              </HBox>
      
                              <ImageView fx:id="imgBalon" fitHeight="80" fitWidth="80" pickOnBounds="true" preserveRatio="true" />
      
