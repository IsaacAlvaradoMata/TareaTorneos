            <children>

                <!-- Imagen de fondo dentro del AnchorPane del contenido -->
                <ImageView fx:id="imgFondoDeporte" fitHeight="600.0" fitWidth="820.0" pickOnBounds="true" />
      
              <AnchorPane minHeight="400" minWidth="700" prefHeight="600.0" prefWidth="819.6">
                  <children>
      
                      <VBox alignment="CENTER" layoutY="-7.0" prefHeight="563.0" prefWidth="800.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      
